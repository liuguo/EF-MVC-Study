<body>
    <div class="x_content"> 
        <p> @Html.ActionLink("Create New", "Create")</p>
     
        <table id="datatable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th><p>option</p></th>
                </tr>
            </thead>
            <tbody>



                @foreach (var item in Model)
                {


                    <tr>
                        <td>@Html.DisplayFor(modelitem => item.UserName)</td>
                        <td>@Html.DisplayFor(modelitem => item.Email)</td>
                        <td>
                                @Html.ActionLink("Details", "Details", new { id = item.ID })
                                 @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                             @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                      
                    </tr>
                }
               
            </tbody>
        </table>
        <p>当前第 @ViewBag.PageIndex 页，共 @ViewBag.TotalPage页共 @ViewBag.Total 条数据</p>
        <ul class="pager">
            @{
                int j = @ViewBag.PageIndex;
                int pageup = j - 1;
                int pagenext = j + 1;
            }
            @if (@ViewBag.PageIndex <= 1)
            {
               
            }
            else {
                <li><a id="myId" href="/Account/fenye?i=@pageup">Previous</a></li>
            }

            @for (int i = 1; i <= ViewBag.TotalPage; i++)
            {
                <li><a href="/Account/fenye?i=@i">@i</a></li>
            }

            @if (@ViewBag.PageIndex >= @ViewBag.TotalPage)
            {
                
            }
            else {
                <li><a href="/Account/fenye?i=@pagenext">Next</a></li>
            }




        </ul>
        
        
        
